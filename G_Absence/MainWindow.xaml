                                <Trigger Property="IsChecked" Value="True" >

                                    <Setter Property="Background" Value="#EBEFF3"  />
                                    <Setter Property="Foreground" Value="#0184EF"  />
                                    <Setter Property="FontWeight" Value="SemiBold"  />



                                </Trigger>

                            </ControlTemplate.Triggers>


                        </ControlTemplate>

                    </Setter.Value>

                </Setter>

