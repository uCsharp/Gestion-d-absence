                                                        <Setter Property="Foreground" Value="White"  />

                                                    </Trigger>

                                                </ControlTemplate.Triggers>


                                            </ControlTemplate>

                                        </Setter.Value>

                                    </Setter>

                                </Style>






                            </RadioButton.Resources>





                        </RadioButton>

                    </Grid>

                    <Grid Grid.Row="2" >


                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Width="120"  FontSize="15"  VerticalAlignment="Center"  Content="ANNULER" Height="50" Click="Annuler_btn"  >


                            <Button.Resources>


