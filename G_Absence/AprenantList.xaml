                                    <Setter Property="Background" Value="Transparent"  />
                                    <Setter Property="Foreground" Value="#e74c3c"  />
                                    <Setter Property="BorderThickness" Value="4"  />
                                    <Setter Property="BorderBrush" Value="#e74c3c"  />


