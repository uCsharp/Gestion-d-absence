                <ColumnDefinition />
                <ColumnDefinition MinWidth="300" Width="1.7*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <Border   Grid.Row="1" Grid.Column="1" Background="White"  CornerRadius="20" >
